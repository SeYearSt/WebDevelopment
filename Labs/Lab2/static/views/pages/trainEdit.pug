extends ../layout.pug

block prepend styles
  link(rel='stylesheet' href='//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css')

block content
  div(class='breadcrumb')
    a(href='/train/add') TrainAdd  
    a(href='/train/edit') TrainEdit  
    a(href='/train/remove') TrainRemove  
  
  form(id='train-edit-form' name='train-edit-form' class='form-inline' action='')
    div(class='form-group')
      div(class='col-md-3')
        label(for='Id') Id
      div(class='col-md-9')
        input(id='Id' name='Id' value='' class='form-control')
    div(class='form-group')
      div(class='col-md-4')
        label(for='name') New Name
      div(class='col-md-8')
        input(id='name' name='name' value='' class='form-control')
    div(class='form-group')
      div(class='col-md-4')
        label(for='capacity') Capacity
      div(class='col-md-8')
        input(id='capacity' name='capacity' value='' class='form-control')  
    div(class='form-group')
      div(class='col-md-12')
        button(type='submit' class='btn btn-primary') Edit
block append scripts
  script(src='/static/js/models/train.js')
  script(src='//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js')
  script(src='/static/js/views/train.js')
      