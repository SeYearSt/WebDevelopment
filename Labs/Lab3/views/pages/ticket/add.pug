extends ../../layout

block content
  div(class='col-md-6')
    form(id='ticket-add-form' name='ticket-add-form' class='form-horizontal' method="POST" action='')
      div(class='form-group')
        div(class='col-md-3')
          label(for='route') price
        div(class='col-md-9')
          input(id='price' name='price' value= price price class='form-control' readonly)
      div(class='form-group')
        div(class='col-md-3')
          label(for='passenger') Passenger
        div(class='col-md-9')
          <select id='passenger' name='passenger' class='form-control'>
            each passenger in passengers
              option(value=passenger.id selected=(passenger.id == $fn.getPropOrDefault(newTicket, 'type', 0))) #{passenger.name}
          </select>
      div(class='form-group')
        div(class='col-md-3')
          label(for='train') Train
        div(class='col-md-9')
          <select id='train' name='train' class='form-control'>
            each train in trains
              option(value=train.id selected=(train.id == $fn.getPropOrDefault(newTicket, 'type', 0))) #{train.name}
          </select>
      div(class='form-group')
        div(class='col-md-3')
          label(for='place') place
        div(class='col-md-9')
          input(id='place' name='place' value= ' ' class='form-control')
      div(class='form-group')
        div(class='col-md-3')
          label(for='date') date
        div(class='col-md-9')
          input(id='date' name='date' value=' ' class='form-control')
      div(class='form-group')
        div(class='col-md-12')
          button(type='submit' class='btn btn-primary') Create