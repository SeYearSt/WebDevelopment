extends ../../layout

block content
  div(class='col-md-6')
    form(id='product-add-form' name='product-add-form' class='form-horizontal' method="POST" action='')
      div(class='form-group')
        div(class='col-md-3')
          label(for='name') Name
        div(class='col-md-9')
          input(id='name' name='name' value=$fn.getPropOrDefault(newpassenger, 'name') class='form-control')
      div(class='form-group')
        div(class='col-md-3')
          label(for='surname') Surname
        div(class='col-md-9')
          input(id='surname' name='surname' value=$fn.getPropOrDefault(newpassenger, 'surname') class='form-control')
      div(class='form-group')
        div(class='col-md-12')
          button(type='submit' class='btn btn-primary') Create