extends ../../layout

block content
  div(class='col-md-6')
    form(id='train-add-form' name='train-add-form' class='form-horizontal' method="POST" action='')
      div(class='form-group')
        div(class='col-md-3')
          label(for='name') Name
        div(class='col-md-9')
          input(id='name' name='name' value=$fn.getPropOrDefault(newtrain, 'name') class='form-control')
      div(class='form-group')
        div(class='col-md-3')
          label(for='route') Route
        div(class='col-md-9')
          input(id='route' name='route' value=$fn.getPropOrDefault(newtrain, 'route') class='form-control')
      div(class='form-group')
        div(class='col-md-3')
          label(for='route') Volume
        div(class='col-md-9')
          input(id='volume' name='volume' value=$fn.getPropOrDefault(newtrain, 'volume') class='form-control')
      div(class='form-group')
        div(class='col-md-12')
          button(type='submit' class='btn btn-primary') Create